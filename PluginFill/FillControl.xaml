<UserControl x:Class="PluginFill.FillControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PluginFill"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="25">
    <UserControl.DataContext>
        <local:FillViewModel />
    </UserControl.DataContext>
        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        MaxHeight="25" MaxWidth="25" Command="{Binding FillCommand}">
            <!-- ="{Binding Path=UndoTooltip, Source={StaticResource Resources}}" -->
            <TextBlock>Test</TextBlock>
        </Button>

</UserControl>
